# Database Configuration
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME

# OpenAI Configuration (if using OpenAI embeddings/moderation)
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration (alternative to DATABASE_URL)
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Drift Monitor Configuration
CHECK_INTERVAL_SECONDS=900  # 15 minutes
EMBEDDING_DIM=1536  # OpenAI text-embedding-ada-002 dimension

# Drift Thresholds (adjust based on your use case)
EMBEDDING_COSINE_THRESHOLD=0.1
REFUSAL_RATE_THRESHOLD=0.05  # 5%
TOXICITY_RATE_THRESHOLD=0.02  # 2%
ACCURACY_DROP_POINTS=0.05  # 5 points absolute drop

# Monitoring Configuration
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO